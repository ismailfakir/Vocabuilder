<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#006633</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="HeaderText.BoldRed">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderText.BoldRed.Big">
        <item name="android:textSize">30sp</item>
    </style>
</resources>
