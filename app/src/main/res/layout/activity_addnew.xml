<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="left"
            android:padding="10dip"
            android:text="Add New Word"
            android:textColor="@color/white"
            android:textSize="@dimen/abc_text_size_title_material" />

        <!--com.beardedhen.androidbootstrap.BootstrapLabel
            android:id="@+id/txtHeding"
            android:layout_column="2"
            android:text="Add New Word2"
            app:bootstrapBrand="warning"
            app:bootstrapHeading="h6" /-->


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="right"
            android:padding="10dip"
            android:text="Swedish"
            android:textColor="@color/black" />

        <!--EditText
            android:id="@+id/txtSwedish"
            android:layout_width="300dp"
            android:layout_height="wrap_content" /-->

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/txtSwedish"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingRight="10dp"
            app:bootstrapBrand="success"
            app:roundedCorners="true" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="right"
            android:padding="10dip"
            android:text="English"
            android:textColor="@color/black" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/txtEnglish"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingRight="10dp"
            app:bootstrapBrand="success"
            app:roundedCorners="true" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="right"
            android:padding="10dip"
            android:text="Example"
            android:textColor="@color/black" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/txtExample"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingRight="10dp"
            app:bootstrapBrand="success"
            app:roundedCorners="true" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_column="2"
            android:weightSum="1">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnAddClear"
                style="@style/wrapping_button"
                android:text="Clear"
                app:bootstrapBrand="primary"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

            <!--com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/buttonAdd"
                style="@style/wrapping_button"
                android:text="ADD"
                app:bootstrapBrand="primary"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" /-->

            <Button
                android:id="@+id/btnAddWord"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_blue"
                android:text="ADD" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/btnAddBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBackground"
            android:contentDescription="back"
            android:gravity="center_horizontal"
            android:src="@mipmap/ic_back" />

    </TableRow>


</TableLayout>
