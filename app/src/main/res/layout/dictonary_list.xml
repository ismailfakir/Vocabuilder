<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f5e9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/word_content_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="SV"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Göra"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:src="@drawable/ic_add_box_black_18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/EN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="EN"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/textEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="DO"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/green"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="POS"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textPartOfSpeach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Part of Speach"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="EX SV"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textEX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Vad ska göra?"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="EX SV"
                android:textColor="@color/bootstrap_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/texEnglishExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPartOfSpeach"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="10dp"
                android:text="English Example"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
