<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/quiz_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ToolBarTheme.Popup"
            app:theme="@style/ToolBarTheme" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#e8f5e9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swedish to English Translation"
            android:textColor="@color/secondary_text"
            android:gravity="center_horizontal"
            android:textSize="12dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE : 0"
            android:textColor="@color/accent"
            android:gravity="center_horizontal"
            android:textSize="24dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_light"
            android:padding="2dp"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Swedish"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultQuestion1"
                    style="@style/Wordviewcontentsmall"
                    android:text="Question"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="English"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultCorrectAnswer1"
                    style="@style/Wordviewcontentsmall"
                    android:text="Correct Answer"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Your Answer"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultUserAnswer1"
                    style="@style/Wordviewcontentsmall"
                    android:text="Your Answer"
                    android:textColor="@color/red"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Result"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgResult1"
                    style="@style/ResultImageViewStyle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_light"
            android:padding="2dp"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Swedish"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultQuestion2"
                    style="@style/Wordviewcontentsmall"
                    android:text="Question"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="English"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultCorrectAnswer2"
                    style="@style/Wordviewcontentsmall"
                    android:text="Correct Answer"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Your Answer"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultUserAnswer2"
                    style="@style/Wordviewcontentsmall"
                    android:text="Your Answer"
                    android:textColor="@color/red"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Result"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgResult2"
                    style="@style/ResultImageViewStyle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_light"
            android:padding="2dp"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Swedish"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultQuestion3"
                    style="@style/Wordviewcontentsmall"
                    android:text="Question"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="English"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultCorrectAnswer3"
                    style="@style/Wordviewcontentsmall"
                    android:text="Correct Answer"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Your Answer"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtResultUserAnswer3"
                    style="@style/Wordviewcontentsmall"
                    android:textColor="@color/red"
                    android:text="Your Answer"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Result"
                    android:textColor="@color/greyLight"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/word_content_background"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgResult3"
                    style="@style/ResultImageViewStyle"/>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
