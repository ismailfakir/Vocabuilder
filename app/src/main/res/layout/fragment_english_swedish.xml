<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.cloudcentrik.vocabuilder.EnglishSwedishFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEnglishSwedishQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="What is the meaning of 'GÃ¶ra'?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radioGroupEngishSwedish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/radioEngishSwedish1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:text="Word 1"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/radioEngishSwedish2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:text="Word 2"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/radioEngishSwedish3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:text="Word 3"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/radioEngishSwedish4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:text="word 4"
                   />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEngishSwedishEnd"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_green_shadow"
                    android:text="End" />

                <Button
                    android:id="@+id/btnEngishSwedishCheckAnswer"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_green_shadow"
                    android:text="Check" />

                <Button
                    android:id="@+id/btnEngishSwedishNext"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_green_shadow"
                    android:text="Next" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
