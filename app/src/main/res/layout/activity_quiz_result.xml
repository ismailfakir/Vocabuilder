<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/quiz_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ToolBarTheme.Popup"
            app:theme="@style/ToolBarTheme" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE :: 0"
            android:textColor="@color/blue"
            android:gravity="center_horizontal"
            android:textSize="32dp"
            android:layout_margin="10dp"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:paddingTop="1dp"
            android:layout_margin="10dp"
            android:stretchColumns="*"
            android:id="@+id/tlTable01">

            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">
                <TextView
                    style="@style/TableHeadingStyle"
                    android:text="Swedish"
                    />
                <TextView
                    style="@style/TableHeadingStyle"
                    android:text="English"
                    />
                <TextView
                    style="@style/TableHeadingStyle"
                    android:text="Answer"
                    />
                <TextView
                    style="@style/TableHeadingStyle"
                    android:text="Result"
                    />
            </TableRow>
            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">
                <TextView
                    android:id="@+id/txtResultQuestion1"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResultCorrectAnswer1"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResultUserAnswer1"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResult1"
                    android:text=""
                    style="@style/TableCellStyle"/>
            </TableRow>
            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">
                <TextView
                    android:id="@+id/txtResultQuestion2"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResultCorrectAnswer2"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResultUserAnswer2"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResult2"
                    android:text=""
                    style="@style/TableCellStyle"
                    android:drawableLeft="@drawable/ic_wrong_red_48dp"/>
            </TableRow>
            <TableRow
                android:background="#CCC"
                android:paddingBottom="1dp"
                android:paddingRight="1dp">
                <TextView
                    android:id="@+id/txtResultQuestion3"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResultCorrectAnswer3"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResultUserAnswer3"
                    android:text=""
                    style="@style/TableCellStyle"
                    />
                <TextView
                    android:id="@+id/txtResult3"
                    android:text=""
                    style="@style/TableCellStyle"
                    android:drawableLeft="@drawable/ic_correct_circle_black_48dp"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
